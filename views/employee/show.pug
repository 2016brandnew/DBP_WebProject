extends ../layout
block content
  title= 'Employee List'

  .container
    each employee in employees
      h1=employee.emp_name
      br
      br

    table.table.table-bordered.table-striped.table-hover
        h2 직원 정보
        thead
        tr
            th 직원번호
            th 부서
            th 이름
            th 재직구분
            th 학력
            th 입사날짜
            th 경력
        tbody
          each employee in employees
            tr
                td= employee.emp_id
                td= employee.dept_name
                td= employee.emp_name
                td= employee.st_name 
                td= employee.emp_edu  
                td= employee.emp_hiredate 
                td= employee.emp_workyear

    table.table.table-bordered.table-striped.table-hover
        h2 직원 보유 기술
        br
        thead
        tr
            th 기술 이름
            th 기술 등급

        tbody#myTable2
         each skill in skills
          tr(href='#emp', data-toggle='collapse')
         
            td=skill.skill_name
            td=skill.skill_grade

  
    table.table.table-bordered.table-striped.table-hover
        h2 직원 경력 정보
        br
        thead
        tr
            th 이전 직장 이름
            th 근무 기간

        tbody#myTable2
         each career in careers
          tr(href='#emp', data-toggle='collapse')
         
            td=career.career_name
            td=career.career_period

    table.table.table-bordered.table-striped.table-hover
        h2 진행 프로젝트 정보
        input#myInput2.form-control(type='text', placeholder='프로젝트 검색..')
        br
        thead
        tr
            th 프로젝트 이름
            th 직무[EMP_ROLE]
            th 참여일[ER_START]
            th 종료일[ER_END]
        tbody#myTable2
         each emp_proj in emp_projs
          tr(href='#emp', data-toggle='collapse')
            td
              a(href=`/project/${emp_proj.pro_id}`)= emp_proj.pro_name
            td=emp_proj.role_name
            td=emp_proj.er_start
            td=emp_proj.er_end
       
       
    script.
        $(document).ready(function(){
        $("#myInput2").on("keyup", function() {
        var value = $(this).val().toLowerCase();
        $("#myTable2 tr").filter(function() {
        $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
        });
        });
        });
  
    .modal-footer
    a.btn.btn-dark(href='javascript:window.history.back();') Back
    br
    br
    br
    br
    br
    br
