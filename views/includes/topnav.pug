  nav.navbar.navbar-expand-md.navbar-dark.bg-dark.fixed-top
    .container
      a.navbar-brand(href="/#master") PROMPT COMPANY
      button.navbar-toggler(type="button", data-toggle="collapse", data-target="#navbarsExampleDefault", aria-controls="navbarsExampleDefault", aria-expanded="false", aria-label="Toggle navigation")
        span.navbar-toggler-icon

      #navbarsExampleDefault.collapse.navbar-collapse
        ul.navbar-nav.ml-auto
          li.nav-item
            a.nav-link(href="/company_info") About
          li.nav-item.dropdown
            a#navbardrop.dropdown-toggle(href = "/project",data-toggle='dropdown').nav-link Project
            .dropdown-menu
              a.dropdown-item(href="/project") Project List
              a.dropdown-item(href="/#project") Project Order
              a.dropdown-item(href="/project/add_project") Project Create
          li.nav-item
            a.nav-link(href="/employee") Employee Info

          if(!currentUser)
            li.nav-item
              a.nav-link(href='/signin') Signin
          else
            li.nav-item
              a.nav-link(href='/signout') Signout
            li.nav-item
              a.nav-link(href='/myinfo') My Profile
